<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>iie</groupId>
		<artifactId>udps</artifactId>
		<version>0.3-spark1.6.0-cdh5.8.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>udps-assembly</artifactId>
	<name>UDPS Assembly</name>
	<packaging>jar</packaging>

	<properties>
		<udps.sdk.name>udps-sdk-${project-version}.jar</udps.sdk.name>
		<udps.depends.name>udps-depends-${project-version}.jar</udps.depends.name>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2.1</version>
				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/assembly.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
