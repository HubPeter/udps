<assembly>
	<id>dist</id>
	<formats>
		<format>tar.gz</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<files>
		<file>
			<source>${project.parent.basedir}/templates/eclipse-java-project/classpath
			</source>
			<outputDirectory>/templates/eclipse-java-project</outputDirectory>
			<destName>.classpath</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/templates/maven-java-project/classpath
			</source>
			<outputDirectory>/templates/maven-java-project</outputDirectory>
			<destName>.classpath</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/templates/eclipse-scala-project/classpath
			</source>
			<outputDirectory>/templates/eclipse-scala-project</outputDirectory>
			<destName>.classpath</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/templates/maven-scala-project/classpath
			</source>
			<outputDirectory>/templates/maven-scala-project</outputDirectory>
			<destName>.classpath</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/templates/eclipse-java-project/project
			</source>
			<outputDirectory>/templates/eclipse-java-project</outputDirectory>
			<destName>.project</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/templates/maven-java-project/project
			</source>
			<outputDirectory>/templates/maven-java-project</outputDirectory>
			<destName>.project</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/templates/eclipse-scala-project/project
			</source>
			<outputDirectory>/templates/eclipse-scala-project</outputDirectory>
			<destName>.project</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/templates/maven-scala-project/project
			</source>
			<outputDirectory>/templates/maven-scala-project</outputDirectory>
			<destName>.project</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/templates/maven-java-project/pom.xml
			</source>
			<outputDirectory>/templates/maven-java-project</outputDirectory>
		</file>
		<file>
			<source>${project.parent.basedir}/templates/maven-scala-project/pom.xml
			</source>
			<outputDirectory>/templates/maven-scala-project</outputDirectory>
		</file>
	</files>

	<fileSets>
		<fileSet>
			<directory>${project.parent.basedir}/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README.md</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/sdk/target</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>
				${project.parent.basedir}/examples/src
			</directory>
			<outputDirectory>/templates/eclipse-java-project/src</outputDirectory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>
				${project.parent.basedir}/examples/src
			</directory>
			<outputDirectory>/templates/maven-java-project/src</outputDirectory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>
				${project.parent.basedir}/examples/src
			</directory>
			<outputDirectory>/templates/eclipse-scala-project/src</outputDirectory>
			<includes>
				<include>**/*.java</include>
				<include>**/*.scala</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>
				${project.parent.basedir}/examples/src
			</directory>
			<outputDirectory>/templates/maven-scala-project/src</outputDirectory>
			<includes>
				<include>**/*.java</include>
				<include>**/*.scala</include>
			</includes>
		</fileSet>
	</fileSets>

</assembly>
